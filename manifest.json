{
  "manifest_version": 2,
  "name": "My Adblocker",
  "version": "1.0",
  "description": "A simple adblocker using MV3 and webRequest",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "myadblocker@example.com"
    }
  }
}
